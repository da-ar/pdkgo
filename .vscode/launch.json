  "version": "0.2.0",
  "configurations": [
    {
      "name": "PDK set puppet",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": [
        "set",
        "puppet",
        "${input:version}"
      ]
    },
    {
      "name": "PDK get puppet",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": [
        "get",
        "puppet",
      ]
    },
  ],
  "inputs": [
    {
      "id": "version",
      "type": "promptString",
      "description": "Puppet version",
      "default": "7"
    }
  ]
}
